using System;

class Program
{
    // Função de adição
    static double Adicao(double a, double b)
    {
    return a + b;
    }

    // Função de subtração
    static double Subtracao(double a, double b)
    {
    return a - b;
    }

    // Função de multiplicação
    static double Multiplicacao(double a, double b)
    {
    return a * b;
    }

    // Função de divisão
    static string Divisao(double a, double b)
    {
        if (b != 0)
        {
    return (a / b).ToString();
        }
        else
        {
    return "Erro: divisão por zero.";
        }
    }

    // Função principal
    static void Main(string[] args)
    {
        double x = 10;
        double y = 5;

        Console.WriteLine("Adição: " + Adicao(x, y));          
        Console.WriteLine("Subtração: " + Subtracao(x, y));     
        Console.WriteLine("Multiplicação: " + Multiplicacao(x, y));
        Console.WriteLine("Divisão: " + Divisao(x, y));       
    }
}
